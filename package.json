{
  "name": "otplus-overtime-addon",
  "version": "2.0.0",
  "description": "Overtime calculator add-on for Clockify v2.0",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:perf": "node --experimental-vm-modules node_modules/jest/bin/jest.js --testPathPattern=performance",
    "lint": "eslint js/",
    "lint:fix": "eslint js/ --fix",
    "format": "prettier --write \"js/**/*.{js,ts}\"",
    "format:check": "prettier --check \"js/**/*.{js,ts}\"",
    "typecheck": "tsc --noEmit",
    "build": "node build.js",
    "build:dev": "node build.js",
    "build:prod": "node build.js --production",
    "build:watch": "node build.js --watch",
    "clean": "rm -rf dist coverage",
    "release": "node scripts/release.js",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:mutants": "stryker run"
  },
  "dependencies": {
    "@sentry/browser": "^8.0.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@stryker-mutator/core": "^8.7.1",
    "@stryker-mutator/jest-runner": "^8.7.1",
    "@stryker-mutator/typescript-checker": "^8.7.1",
    "@eslint/js": "^9.39.2",
    "@playwright/test": "^1.50.0",
    "@types/jest": "^30.0.0",
    "babel-jest": "^29.7.0",
    "esbuild": "^0.27.2",
    "esbuild-jest": "^0.5.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-security": "^3.0.1",
    "fast-check": "^4.5.3",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.8.1",
    "ts-jest": "^29.4.6",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.53.1"
  },
  "keywords": [
    "clockify",
    "overtime",
    "timesheet",
    "addon"
  ],
  "author": "OTPLUS Team",
  "license": "MIT"
}
